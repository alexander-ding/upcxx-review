{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build current file with OpenMP",
            "command": "g++-8",
            "args": [
                "-fopenmp",
                "-std=c++11",
                "${file}",
                "-o", "${fileBasenameNoExtension}"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build current file without OpenMP",
            "command": "g++-8",
            "args": [
                "-std=c++11",
                "${file}",
                "-o", "${fileBasenameNoExtension}_no_mp"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run current file's compiled version with OpenMP",
            "command": "./${fileBasenameNoExtension}",
            "group": "test"
        },
        {
            "type": "shell",
            "label": "Run current file's compiled version without OpenMP",
            "command": "./${fileBasenameNoExtension}_no_mp",
            "group": "test"
        }
    ]
}